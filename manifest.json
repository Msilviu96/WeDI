{
	"name": "WeDI",
	"version": "1.0",
	"manifest_version": 2,
	"description": "Web Data Interpreter",
	"web_accessible_resources": [
		"images/*.png",
		"html",
		"css/",
		"images/32.png"
	],
	"browser_action": {
		"default_icon": "images/512.png",
		"default_popup": "html/popup.html",
		"default_title": "app"
	},
	"icons": {
		"16": "images/16.png",
		"24": "images/24.png",
		"32": "images/32.png",
		"48": "images/48.png",
		"128": "images/128.png",
		"256": "images/256.png",
		"512": "images/512.png"
	},

	"content_security_policy": "\"script-src 'self' 'unsafe-eval'; object-src 'self'",
	"background": {
		"persistent": false,
		"scripts": [ "javascript/background.js" ]
	},
	"content_scripts": [
					{
						"matches": [ "http://*/*", "https://*/*" ],
						
						"js": [ "javascript/content.js", "javascript/background.js" ]
					}
	]

}